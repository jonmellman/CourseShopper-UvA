<% content_for :heading do %>
	<%= link_to 'Browse', root_path %>
	<%= link_to 'My Courses', my_courses_path %>
<% end %>

<ol id="course_list" data-role="listview" data-filter="true">
	<% @courses.each do |course| %>
		<li><a href="/institutes/<%= params[:institute] %>/courses/<%= course.title %>"><%= course.title %></a></li>
	<% end %>
</ol>